<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family:  'Arial Narrow', Arial, sans-serif;
      }
    </style>
    <title>Url shortner</title>
  </head>
  <body>
    <h1>My url shortner</h1>

    <div>

      <div>
        <h3>How to use</h3>
        <p><i>Enter your url in the input field and click on generate button. You will get a short url. Use that url to access your website. </i></p>
      </div>

      <form action="/url" method="POST">
        <label for="url">Enter your url</label>
        <input type="text" name="url" id="url"  placeholder="https://example.com"/>
        <button type="submit">Generate</button>
      </form>
      <% if (locals.id) { %>
        <% console.log(locals) %>
          <p> URL generated: http://localhost:8000/<%= id %></p>
      <% } %>
    </div>
    

    <div>
      <% if (locals.urls) { %>
          <table>

            <thead>
              <th> S. no.</th>
              <th> ShortID</th>
              <th> Redirect</th>
              <th> No. of clicks</th>

            </thead>
            <tbody>
              <% urls.forEach((url,i) => { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td> 
                    <a href="localhost:8000/<%= url.shortId %>" ><%= url.shortId %></a>
                  </td>
                  <td>
                    <a href="<%= url.url %>"><%= url.redirectUrl %></a>
                  </td>
                  <td><%= url.visitHistory.length %></td>
                </tr>
              <% }) %>

            </tbody>
          </table>
      <% } %>

    </div>
  </body>
</html>
